{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "types": ["vitest/globals", "node"] // Vitestのグローバル型とNode.jsの型を使用
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "src/**/*.test.ts", // テストを除外しないとビルド時にエラー
    "src/**/*.spec.ts"  // こちらも同様
  ]
}